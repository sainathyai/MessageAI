# MessageAI Environment Variables
# Copy this file to .env and fill in your actual values

# Firebase Configuration
# Get these from Firebase Console → Project Settings → Your apps → SDK setup and configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# OpenAI Configuration
# Get your API key from https://platform.openai.com/api-keys
EXPO_PUBLIC_OPENAI_API_KEY=sk-your_openai_api_key_here

# AWS Configuration (Optional - for media storage)
# If not provided, app will use Firebase Storage as fallback
EXPO_PUBLIC_AWS_REGION=us-east-1
EXPO_PUBLIC_S3_BUCKET=your-bucket-name
EXPO_PUBLIC_API_GATEWAY_URL=https://your-api-gateway.execute-api.region.amazonaws.com/prod

# Push Notifications (Optional)
# Lambda endpoint for push notification registration
EXPO_PUBLIC_LAMBDA_PUSH_ENDPOINT=https://your-lambda-endpoint.amazonaws.com/prod

# Google Sign-In (Optional - only if using Google Auth)
# Get these from Firebase Console → Authentication → Sign-in method → Google
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com

